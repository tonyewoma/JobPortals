@model JobPortals.Areas.Administrator.Models.Vacancy

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">@Html.DisplayFor(model => model.CompanyName)</h2>
        <p class="card-text">@Html.DisplayFor(model => model.AboutCompany)</p>

        <table class="table table-hover">
            <tr>
                <th>@Html.DisplayNameFor(model => model.JobType)</th>
                <td>@Html.DisplayFor(model => model.JobType)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Qualification)</th>
                <td>@Html.DisplayFor(model => model.Qualification)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.Experience)</th>
                <td>@Html.DisplayFor(model => model.Experience)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <td>@Html.DisplayFor(model => model.Location)</td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.CompanyType.CompanyTypeName)</th>
                <td>@Html.DisplayFor(model => model.CompanyType.CompanyTypeName)</td>
            </tr>
        </table>
    </div>
</div>
<p>@Html.Partial("_BackToListButtonPartial")</p>

